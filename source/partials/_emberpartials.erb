<!-- CONSOLE -->

  <script type="text/x-handlebars" id="console">
    <h2><img src="images/embermmblack.svg"> IE Friendly Logging</h2>
    <p>Use this syntax to safely console log:</p>
    <pre>
      <code class="html xml">debug(<span class="jstext">"Message 1"</span>, <span class="jstext">"Message 2"</span>);
      </code>
    </pre>
    <br>
    {{#link-to 'index' tagName='a'}}<-Back{{/link-to}}
  </script>
